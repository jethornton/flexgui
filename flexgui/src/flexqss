				style += f'\n\tborder-color: {self.rb_border_color_normal};'
			if self.rb_border_width_normal.value() > 0:
				style += f'\n\tborder-width: {self.rb_border_width_normal.value()}px;'
			if self.rb_border_radius_normal.value() > 0:
				style += f'\n\tborder-radius: {self.rb_border_radius_normal.value()}px;'


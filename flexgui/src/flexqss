				style += f'\n\tmin-height: {self.rb_min_height_normal.value()};'
			if self.rb_max_width_normal.value() > 0:
				style += f'\n\tmax-width: {self.rb_max_width_normal.value()};'
			if self.rb_max_height_normal.value() > 0:
				style += f'\n\tmax-height: {self.rb_max_height_normal.value()};'


#!/usr/bin/env python3

import sys, os, textwrap
# disable cache usage must be before any local imports
sys.dont_write_bytecode = True

from functools import partial

from PyQt6.QtWidgets import QApplication, QMainWindow, QColorDialog
from PyQt6.QtWidgets import QRadioButton, QFontDialog, QFileDialog
from PyQt6.QtGui import QPixmap, QFont, QFontInfo, QColor
from PyQt6.QtCore import QSignalBlocker
from PyQt6 import uic

from libflexgui import qss_images
from libflexgui import qss_pushbutton
from libflexgui import qss_checkbox
from libflexgui import qss_toolbar
from libflexgui import qss_toolbutton

class main(QMainWindow):
	def __init__(self):
		super().__init__()

		# get the path to the executable
		self.path = os.path.dirname(os.path.realpath(sys.argv[0]))

		# set the library path
		if self.path == '/usr/bin':
			self.gui_path = '/usr/lib/libflexgui'
		else:
			self.gui_path = self.path
		uic.loadUi(os.path.join(self.gui_path, 'flexqss.ui'), self)

		self.setGeometry(0, 0, 500, 500)
		self.setWindowTitle('Flex QSS Creator')
		qss_pushbutton.startup(self)
		qss_checkbox.startup(self)
		qss_toolbar.startup(self)
		qss_toolbutton.startup(self)
		self.setup()
		self.show()

	def setup(self):

		for i in range(6):
			getattr(self, f'boxmodel_lb_{i}').setPixmap(QPixmap(':/boxmodel.png'))
		#self.boxmodel_lb.setPixmap(QPixmap(':/boxmodel.png'))

		# Menu Items
		self.actionSave_As.triggered.connect(self.save)

		border_types = ['none', 'solid', 'dashed', 'dotted', 'double', 'groove',
			'ridge', 'inset', 'outset']
		abstract_button_states = ['normal', 'hover', 'pressed', 'checked', 'disabled']

		'''
		# QCheckBox
		self.cb_disable.clicked.connect(partial(self.disable, 'checkBox'))
		self.cb_apply_style.clicked.connect(self.cb_create_stylesheet)

		for item in abstract_button_states: # populate border combo boxes
			getattr(self, f'cb_border_type_{item}').addItems(border_types)

		for state in abstract_button_states: # color dialog connections
			getattr(self, f'cb_fg_color_{state}').clicked.connect(self.color_dialog)
			getattr(self, f'cb_bg_color_{state}').clicked.connect(self.color_dialog)
			getattr(self, f'cb_border_color_{state}').clicked.connect(self.color_dialog)

		# setup enable variables
		for item in abstract_button_states:
			setattr(self, f'cb_{item}', False)
			setattr(self, f'cb_color_{item}', False)
			setattr(self, f'cb_bg_color_{item}', False)
			setattr(self, f'cb_border_color_{item}', False)

		self.cb_font_family = False
		self.cb_font_size = False
		self.cb_font_weight = False
		self.cb_font_style = False
		self.cb_font_italic = False
		self.cb_indicator = False

		for state in abstract_button_states: # border
			getattr(self, f'cb_border_type_{state}').currentIndexChanged.connect(self.border)

		self.cb_min_width_normal.valueChanged.connect(self.size)
		self.cb_min_height_normal.valueChanged.connect(self.size)
		self.cb_max_width_normal.valueChanged.connect(self.size)
		self.cb_max_height_normal.valueChanged.connect(self.size)

		self.cb_padding_normal.valueChanged.connect(self.padding)
		self.cb_padding_left_normal.valueChanged.connect(self.padding)
		self.cb_padding_right_normal.valueChanged.connect(self.padding)
		self.cb_padding_top_normal.valueChanged.connect(self.padding)
		self.cb_padding_bottom_normal.valueChanged.connect(self.padding)

		self.cb_margin_normal.valueChanged.connect(self.margin)
		self.cb_margin_left_normal.valueChanged.connect(self.margin)
		self.cb_margin_right_normal.valueChanged.connect(self.margin)
		self.cb_margin_top_normal.valueChanged.connect(self.margin)
		self.cb_margin_bottom_normal.valueChanged.connect(self.margin)

		self.cb_font_picker.clicked.connect(self.font_dialog)

		self.cb_indicator_width_normal.valueChanged.connect(self.indicator)
		self.cb_indicator_height_normal.valueChanged.connect(self.indicator)
		'''
		# QRadioButton
		self.rb_disable.clicked.connect(partial(self.disable, 'checkBox'))
		self.rb_apply_style.clicked.connect(self.rb_create_stylesheet)

		for item in abstract_button_states: # populate border combo boxes
			getattr(self, f'rb_border_type_{item}').addItems(border_types)

		for state in abstract_button_states: # color dialog connections
			getattr(self, f'rb_fg_color_{state}').clicked.connect(self.color_dialog)
			getattr(self, f'rb_bg_color_{state}').clicked.connect(self.color_dialog)
			getattr(self, f'rb_border_color_{state}').clicked.connect(self.color_dialog)

		# setup enable variables
		for item in abstract_button_states:
			setattr(self, f'rb_{item}', False)
			setattr(self, f'rb_color_{item}', False)
			setattr(self, f'rb_bg_color_{item}', False)
			setattr(self, f'rb_border_color_{item}', False)

		self.rb_font_family = False
		self.rb_font_size = False
		self.rb_font_weight = False
		self.rb_font_style = False
		self.rb_font_italic = False
		self.rb_indicator = False

		for state in abstract_button_states: # border
			getattr(self, f'rb_border_type_{state}').currentIndexChanged.connect(self.border)

		self.rb_min_width_normal.valueChanged.connect(self.size)
		self.rb_min_height_normal.valueChanged.connect(self.size)
		self.rb_max_width_normal.valueChanged.connect(self.size)
		self.rb_max_height_normal.valueChanged.connect(self.size)

		self.rb_padding_normal.valueChanged.connect(self.padding)
		self.rb_padding_left_normal.valueChanged.connect(self.padding)
		self.rb_padding_right_normal.valueChanged.connect(self.padding)
		self.rb_padding_top_normal.valueChanged.connect(self.padding)
		self.rb_padding_bottom_normal.valueChanged.connect(self.padding)

		self.rb_margin_normal.valueChanged.connect(self.margin)
		self.rb_margin_left_normal.valueChanged.connect(self.margin)
		self.rb_margin_right_normal.valueChanged.connect(self.margin)
		self.rb_margin_top_normal.valueChanged.connect(self.margin)
		self.rb_margin_bottom_normal.valueChanged.connect(self.margin)

		self.rb_font_picker.clicked.connect(self.font_dialog)

		self.rb_indicator_width_normal.valueChanged.connect(self.indicator)
		self.rb_indicator_height_normal.valueChanged.connect(self.indicator)

		# QLabel
		self.lb_apply_style.clicked.connect(self.lb_create_stylesheet)
		self.lb_disable.clicked.connect(partial(self.disable, 'label'))

		lb_pseudo_states = ['normal', 'hover', 'disabled']

		for state in lb_pseudo_states: # color dialog connections
			getattr(self, f'lb_fg_color_{state}').clicked.connect(self.color_dialog)
			getattr(self, f'lb_bg_color_{state}').clicked.connect(self.color_dialog)
			getattr(self, f'lb_border_color_{state}').clicked.connect(self.color_dialog)

		for item in lb_pseudo_states: # populate border combo boxes
			getattr(self, f'lb_border_type_{item}').addItems(border_types)

		# setup enable variables
		for item in lb_pseudo_states:
			setattr(self, f'lb_{item}', False)
			setattr(self, f'lb_color_{item}', False)
			setattr(self, f'lb_bg_color_{item}', False)
			setattr(self, f'lb_border_color_{item}', False)

		self.lb_font_family = False
		self.lb_font_size = False
		self.lb_font_weight = False
		self.lb_font_style = False
		self.lb_font_italic = False

		self.lb_min_width_normal.valueChanged.connect(self.size)
		self.lb_min_height_normal.valueChanged.connect(self.size)
		self.lb_max_width_normal.valueChanged.connect(self.size)
		self.lb_max_height_normal.valueChanged.connect(self.size)

		self.lb_padding_normal.valueChanged.connect(self.padding)
		self.lb_padding_left_normal.valueChanged.connect(self.padding)
		self.lb_padding_right_normal.valueChanged.connect(self.padding)
		self.lb_padding_top_normal.valueChanged.connect(self.padding)
		self.lb_padding_bottom_normal.valueChanged.connect(self.padding)

		self.lb_margin_normal.valueChanged.connect(self.margin)
		self.lb_margin_left_normal.valueChanged.connect(self.margin)
		self.lb_margin_right_normal.valueChanged.connect(self.margin)
		self.lb_margin_top_normal.valueChanged.connect(self.margin)
		self.lb_margin_bottom_normal.valueChanged.connect(self.margin)

		self.lb_font_picker.clicked.connect(self.font_dialog)

	'''
	######### QCheckBox Stylesheet #########

	def cb_create_stylesheet(self):
		style = False

		# QCheckBox normal pseudo-state
		if self.cb_normal:
			style = 'QCheckBox {'

			# color
			if self.cb_color_normal:
				style += f'\n\tcolor: {self.cb_color_normal};'
			if self.cb_bg_color_normal:
				style += f'\n\tbackground-color: {self.cb_bg_color_normal};'

			# font
			if self.cb_font_family:
				style += f'\n\tfont-family: {self.cb_font_family};'
			if self.cb_font_size:
				style += f'\n\tfont-size: {self.cb_font_size}pt;'
			if self.cb_font_weight:
				style += f'\n\tfont-weight: {self.cb_font_weight};'

			# size
			if self.cb_min_width_normal.value() > 0:
				style += f'\n\tmin-width: {self.cb_min_width_normal.value()};'
			if self.cb_min_height_normal.value() > 0:
				style += f'\n\tmin-height: {self.cb_min_height_normal.value()};'
			if self.cb_max_width_normal.value() > 0:
				style += f'\n\tmax-width: {self.cb_max_width_normal.value()};'
			if self.cb_max_height_normal.value() > 0:
				style += f'\n\tmax-height: {self.cb_max_height_normal.value()};'

			# border
			border_type_normal = self.cb_border_type_normal.currentText()
			if border_type_normal != 'none':
				style += f'\n\tborder-style: {border_type_normal};'
			if self.cb_border_color_normal:
				style += f'\n\tborder-color: {self.cb_border_color_normal};'
			if self.cb_border_width_normal.value() > 0:
				style += f'\n\tborder-width: {self.cb_border_width_normal.value()}px;'
			if self.cb_border_radius_normal.value() > 0:
				style += f'\n\tborder-radius: {self.cb_border_radius_normal.value()}px;'

			# padding
			if self.cb_padding_normal.value() > 0:
				style += f'\n\tpadding: {self.cb_padding_normal.value()};'
			if self.cb_padding_left_normal.value() > 0:
				style += f'\n\tpadding-left: {self.cb_padding_left_normal.value()};'
			if self.cb_padding_right_normal.value() > 0:
				style += f'\n\tpadding-right: {self.cb_padding_right_normal.value()};'
			if self.cb_padding_top_normal.value() > 0:
				style += f'\n\tpadding-top: {self.cb_padding_top_normal.value()};'
			if self.cb_padding_bottom_normal.value() > 0:
				style += f'\n\tpadding-bottom: {self.cb_padding_bottom_normal.value()};'

			# margin
			if self.cb_margin_normal.value() > 0:
				style += f'\n\tmargin: {self.cb_margin_normal.value()};'
			if self.cb_margin_left_normal.value() > 0:
				style += f'\n\tmargin-left: {self.cb_margin_left_normal.value()};'
			if self.cb_margin_right_normal.value() > 0:
				style += f'\n\tmargin-right: {self.cb_margin_right_normal.value()};'
			if self.cb_margin_top_normal.value() > 0:
				style += f'\n\tmargin-top: {self.cb_margin_top_normal.value()};'
			if self.cb_margin_bottom_normal.value() > 0:
				style += f'\n\tmargin-bottom: {self.cb_margin_bottom_normal.value()};'

			style += '\n}' # End of QCheckBox normal pseudo-state

		# QCheckBox indicator sub-control

		if self.cb_indicator:
			if style: # style is not False
				style += '\n\nQCheckBox::indicator {'
			else:
				style = '\n\nQCheckBox::indicator {'
			if self.cb_indicator_width_normal.value() > 0:
				style += f'\n\twidth: {self.cb_indicator_width_normal.value()}px;'
			if self.cb_indicator_height_normal.value() > 0:
				style += f'\n\theight: {self.cb_indicator_height_normal.value()}px;'

			style += '\n}' # End of QCheckBox::indicator

		# QCheckBox hover pseudo-state
		if self.cb_hover:
			# color
			if style: # style is not False
				style += '\n\nQCheckBox:hover {'
			else:
				style = '\n\nQCheckBox:hover {'

			if self.cb_color_hover:
				style += f'\n\tcolor: {self.cb_color_hover};'
			if self.cb_bg_color_hover:
				style += f'\n\tbackground-color: {self.cb_bg_color_hover};'

			# border
			border_type_hover = self.cb_border_type_hover.currentText()
			if border_type_hover != 'none':
				style += f'\n\tborder-style: {border_type_hover};'
			if self.cb_border_color_hover:
				style += f'\n\tborder-color: {self.cb_border_color_hover};'
			if self.cb_border_width_hover.value() > 0:
				style += f'\n\tborder-width: {self.cb_border_width_hover.value()}px;'
			if self.cb_border_radius_hover.value() > 0:
				style += f'\n\tborder-radius: {self.cb_border_radius_hover.value()}px;'

			style += '\n}' # End of QCheckBox hover pseudo-state

		# QCheckBox pressed pseudo-state
		if self.cb_pressed:
			if style: # style is not False
				style += '\n\nQCheckBox:pressed {'
			else:
				style = '\n\nQCheckBox:pressed {'

		# color
			if self.cb_color_pressed:
				style += f'\n\tcolor: {self.cb_color_pressed};'
			if self.cb_bg_color_pressed:
				style += f'\n\tbackground-color: {self.cb_bg_color_pressed};'

			# border
			border_type_pressed = self.cb_border_type_pressed.currentText()
			if border_type_pressed != 'none':
				style += f'\n\tborder-style: {border_type_pressed};'
			if self.cb_border_color_pressed:
				style += f'\n\tborder-color: {self.cb_border_color_pressed};'
			if self.cb_border_width_pressed.value() > 0:
				style += f'\n\tborder-width: {self.cb_border_width_pressed.value()}px;'
			if self.cb_border_radius_pressed.value() > 0:
				style += f'\n\tborder-radius: {self.cb_border_radius_pressed.value()}px;'

			style += '\n}' # End of QCheckBox pressed pseudo-state

		# QCheckBox checked pseudo-state
		if self.cb_checked:
			if style: # style is not False
				style += '\n\nQCheckBox:checked {'
			else:
				style = '\n\nQCheckBox:checked {'

			#color
			if self.cb_color_checked:
				style += f'\n\tcolor: {self.cb_color_checked};'
			if self.cb_bg_color_checked:
				style += f'\n\tbackground-color: {self.cb_bg_color_checked};'

			# border
			border_type_checked = self.cb_border_type_checked.currentText()
			if border_type_checked != 'none':
				style += f'\n\tborder-style: {border_type_checked};'
			if self.cb_border_color_checked:
				style += f'\n\tborder-color: {self.cb_border_color_checked};'
			if self.cb_border_width_checked.value() > 0:
				style += f'\n\tborder-width: {self.cb_border_width_checked.value()}px;'
			if self.cb_border_radius_checked.value() > 0:
				style += f'\n\tborder-radius: {self.cb_border_radius_checked.value()}px;'

			style += '\n}' # End of QCheckBox checked pseudo-state

		# QCheckBox disabled pseudo-state
		if self.cb_disabled:
			if style: # style is not False
				style += '\n\nQCheckBox:disabled {'
			else:
				style = '\n\nQCheckBox:disabled {'

			# color
			if self.cb_color_disabled:
				style += f'\n\tcolor: {self.cb_color_disabled};'
			if self.cb_bg_color_disabled:
				style += f'\n\tbackground-color: {self.cb_bg_color_disabled};'

			# border
			border_type_disabled = self.cb_border_type_disabled.currentText()
			if border_type_disabled != 'none':
				style += f'\n\tborder-style: {border_type_disabled};'
			if self.cb_border_color_disabled:
				style += f'\n\tborder-color: {self.cb_border_color_disabled};'
			if self.cb_border_width_disabled.value() > 0:
				style += f'\n\tborder-width: {self.cb_border_width_disabled.value()}px;'
			if self.cb_border_radius_disabled.value() > 0:
				style += f'\n\tborder-radius: {self.cb_border_radius_disabled.value()}px;'

			style += '\n}' # QCheckBox disabled pseudo-state

		# QCheckBox build and apply the stylesheet
		self.cb_stylesheet.clear()
		if style:
			lines = style.splitlines()
			for line in lines:
				self.cb_stylesheet.appendPlainText(line)

			self.checkBox.setStyleSheet(textwrap.dedent(style))
	'''
	######### QRadioButton Stylesheet #########

	def rb_create_stylesheet(self):
		style = False

		# QRadioButton normal pseudo-state
		if self.rb_normal:
			style = 'QRadioButton {'

			# color
			if self.rb_color_normal:
				style += f'\n\tcolor: {self.rb_color_normal};'
			if self.rb_bg_color_normal:
				style += f'\n\tbackground-color: {self.rb_bg_color_normal};'

			# font
			if self.rb_font_family:
				style += f'\n\tfont-family: {self.rb_font_family};'
			if self.rb_font_size:
				style += f'\n\tfont-size: {self.rb_font_size}pt;'
			if self.rb_font_weight:
				style += f'\n\tfont-weight: {self.rb_font_weight};'

			# size

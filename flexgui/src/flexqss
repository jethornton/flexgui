				style += f'\n\tmargin-left: {self.rb_margin_left_normal.value()};'
			if self.rb_margin_right_normal.value() > 0:
				style += f'\n\tmargin-right: {self.rb_margin_right_normal.value()};'
			if self.rb_margin_top_normal.value() > 0:
				style += f'\n\tmargin-top: {self.rb_margin_top_normal.value()};'
			if self.rb_margin_bottom_normal.value() > 0:
				style += f'\n\tmargin-bottom: {self.rb_margin_bottom_normal.value()};'

			style += '\n}' # End of QRadioButton normal pseudo-state

		# QRadioButton indicator sub-control

		if self.rb_indicator:
			if style: # style is not False
				style += '\n\nQRadioButton::indicator {'
			else:
